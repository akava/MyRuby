<% content_for :header_tags do %>
    <%= stylesheet_link_tag 'last_messages', :plugin => 'redmine_last_messages' %>
<% end %>
<% if messages.any? %>
<div class="forum_messages box">
        <h3><%= link_to l(:latest_forum_messages), :controller => 'boards', :action => 'index', :project_id => @project %></h3>
        <%= render(:partial => 'messages/messages',
                   :collection => messages ) %>
</div>
<% end %>